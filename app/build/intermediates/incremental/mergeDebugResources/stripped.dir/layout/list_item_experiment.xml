<?xml version="1.0" encoding="utf-8"?>
                                                                   
    
                 
                                
                                                      
                 
                            
                                                                        
           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/experiments_background"
                                          
        android:orientation="horizontal" android:tag="layout/list_item_experiment_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/experiment_icon_text"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/text_icon_background"
            android:fontFamily="monospace"
            android:padding="2dp"
            android:tag="binding_1"                          
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/experiment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:maxLines="2"
            android:tag="binding_2"         
            android:textAlignment="textStart"
            android:textSize="24sp"
            android:typeface="monospace"
            android:gravity="start" />

        <TextView
            android:id="@+id/samples_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:tag="binding_3"                          
            android:textAlignment="textEnd"
            android:textSize="24sp"
            android:typeface="monospace"
            android:gravity="end" />
    </LinearLayout>


         